#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	dh_auto_install
	install -m755 -d debian/bluecherrydvr/usr/share/doc/bluecherrydvr
	cat misc/sql/sqlite/*.sql > \
		debian/bluecherrydvr/usr/share/doc/bluecherrydvr/sqlite-base.sql
	install -m644 -D misc/bluecherry.conf \
		debian/bluecherrydvr/etc/bluecherry.conf

override_dh_installinit:
	dh_installinit -o --name=bc-server --upstart-only
	dh_installinit -o --name=bc-detect --upstart-only
