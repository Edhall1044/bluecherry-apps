#!/bin/sh

set -e

case "$1" in
	install|upgrade)
		if ! id bluecherry > /dev/null 2>&1; then
			useradd -c "Bluecherry DVR" -d /var/lib/bluecherry \
				-G audio,video -M -U -r bluecherry
			# And www-data will need it too
			usermod -a -G video,audio,bluecherry www-data
		fi
		stop bluecherry || true
		;;
esac

